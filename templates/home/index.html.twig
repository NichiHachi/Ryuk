{% extends 'base.html.twig' %}

{% block title %}Ryuk - Home
{% endblock %}

{% block content %}
	<h2>Une mort est si vite arrivée...</h2>
	<article>
		<div class="card">
			<h2>Nombre de morts par départements</h2>
				<table class="table table-dark table-striped table-bordered table-hover rounded-3">
					<thead>
						<tr>
							<th>Departement</th>
							<th>Nombre</th>
						</tr>
					</thead>
					<tbody>
						{% for departement in departements %}
						<tr>
							<td>{{ departement.nom }}</td>
							<td>{{ departement.nombre }}</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
		</div>
		<div class="card">
			<table>
				<thead>
					<td>Pays</td>
					<td>Taux de mortalité (%)</td>
				</thead>
				<tbody>
					{% for country in countries.findAll %}
					<tr>
						<td>{{ country.name }}</td>
						<td>{{ country.mortalityRate }}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		{% for i in 1..100 %}
			<div class="card">
				Beaucoup de contenu.
			</div>
		{% endfor %}
	</article>
{% endblock %}
