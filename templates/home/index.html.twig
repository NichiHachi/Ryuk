{% extends 'base.html.twig' %}

{% block title %}Ryuk - Home
{% endblock %}

{% block content %}
	<h2>Une mort est si vite arrivée...</h2>
	<article>
		<div class="card">
			<h2>Nombre de morts depuis l'ouverture de la page</h2>
			<table class="table table-bordered text-center">
				<tbody>
					<tr id="compteur">
						{% for i in 11..0 %}
							<td id="compteur-num{{ i }}">0</td>
						{% endfor %}
					</tr>
				</tbody>
			</table>
		</div>
		<div class="card">
		<h2>Nombre de morts par départements</h2>
			<table class="table table-dark table-striped table-bordered table-hover rounded-3">
				<thead>
					<tr>
						<th>Departement</th>
						<th>Nombre</th>
					</tr>
				</thead>
				<tbody>
					{% for departement in topDepartements %}
					<tr>
						<td>{{ departement.nom }}</td>
						<td>{{ departement.nombre }}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="card">
			<h2>Top des prénoms les plus morts</h2>
			<table class="table table-dark table-striped table-bordered table-hover rounded-3">
				<thead>
					<tr>
						<th>Prenom</th>
						<th>Nombre</th>
					</tr>
				</thead>
				<tbody>
					{% for prenom in topPrenoms %}
					<tr>
						<td>{{ prenom.prenom }}</td>
						<td>{{ prenom.nombre }}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="card">
			<h2>Taux de mortalité par pays</h2>
			<table class="table table-dark table-striped table-bordered table-hover rounded-3">
				<thead>
					<tr>
						<th>Pays</th>
						<th>Taux de mortalité (%)</th>
					</tr>
				</thead>
				<tbody>
					{% for country in countries.findAll %}
					<tr>
						<td>{{ country.name }}</td>
						<td>{{ country.mortalityRate }}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		{% for i in 1..100 %}
			<div class="card">
				Beaucoup de contenu.
			</div>
		{% endfor %}

		</script>
		<script src={{ asset('js/compteur.js') }}></script>
	</article>
{% endblock %}
